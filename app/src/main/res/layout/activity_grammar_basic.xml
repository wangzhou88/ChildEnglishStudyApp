<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_grammar_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="进度：0/0"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/btn_grammar_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grammar_finish"
            android:textSize="14sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_grammar_image"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_grammar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="语法标题"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_grammar_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="语法内容"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_grammar_mastered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标记为已掌握"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_green_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_grammar_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/grammar_prev"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_grammar_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/grammar_next"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>