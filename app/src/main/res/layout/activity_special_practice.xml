<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/special_practice"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_practice_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/practice_vocabulary"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btn_practice_grammar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/practice_grammar"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btn_practice_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/practice_reading"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btn_back_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="16sp"
        android:padding="12dp"/>

</LinearLayout>